# Application Settings

ENVIRONMENT=development

LOG_LEVEL=INFO

APP_NAME=agentic-ai-platform

APP_VERSION=1.0.0



# API Settings

API_HOST=0.0.0.0

API_PORT=8000

API_WORKERS=4



# LLM Provider Configuration
# Set LLM_PROVIDER to 'openai' or 'nebius'
LLM_PROVIDER=openai

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Nebius AI (Token Factory) - Optional (if using Nebius)
NEBIUS_API_KEY=your_nebius_api_key_here



# Couchbase Capella Configuration

CB_CONNECTION_STRING=your_couchbase_connection_string_here

CB_USERNAME=your_couchbase_username_here

CB_PASSWORD=your_couchbase_password_here

CB_BUCKET_NAME=travel-sample



# MCP Server Path

# Path to your cloned mcp-server-couchbase repository

MCP_SERVER_PATH=/path/to/your/mcp-server-couchbase



# Redis Configuration

REDIS_HOST=localhost

REDIS_PORT=6379

REDIS_DB=0

REDIS_PASSWORD=



# Cache Settings

CACHE_ENABLED=true

CACHE_TTL_SECONDS=3600
